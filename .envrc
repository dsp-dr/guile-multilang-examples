# Project environment configuration for Guile Multilang Examples
export PROJECT_NAME="guile-multilang-examples"
export PROJECT_ROOT="$(pwd)"
export GUILE_LOAD_PATH="${PROJECT_ROOT}:${PROJECT_ROOT}/examples:${GUILE_LOAD_PATH}"
export GUILE_COMPILED_PATH="${PROJECT_ROOT}:${GUILE_COMPILED_PATH}"

# Hoot/WASM specific
export HOOT_PATH="${PROJECT_ROOT}/submodules/hoot"
if [ -d "$HOOT_PATH/bin" ]; then
    export PATH="${HOOT_PATH}/bin:${PATH}"
fi

# Geiser development support
export GEISER_SCHEME_DIR="${PROJECT_ROOT}/submodules/geiser"

echo "Loaded environment for ${PROJECT_NAME} at ${PROJECT_ROOT}"
echo "Available commands: make help"